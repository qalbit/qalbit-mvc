{
    "name": "qalbit-site",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev:css": "npx tailwindcss -i ./resources/css/app.css -o ./public/assets/css/app.css --watch",
        "dev": "npm-run-all --parallel dev:*",

        "build:css": "NODE_ENV=production npx tailwindcss -i ./resources/css/app.css -o ./public/assets/css/app.css --minify",
        "build:assets": "NODE_ENV=production node tools/build-assets.js",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "esbuild": "^0.27.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.45",
        "tailwindcss": "^3.4.14"
    }
}
